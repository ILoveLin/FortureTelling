<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_280"
        android:background="@mipmap/bg_get_name"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <!--男方姓名-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_10"
            android:layout_marginRight="@dimen/padding_10"
            android:background="@drawable/shape_add_name"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/padding_20">

            <TextView
                style="@style/addNameTextStyle"
                android:text="男方姓名:" />

            <View
                android:layout_width="@dimen/padding_1"
                android:layout_height="@dimen/padding_45"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/padding_10" />

            <com.company.forturetelling.utils.ClearEditText
                android:id="@+id/et_input_four_boy_name"
                android:layout_width="1dp"
                android:layout_height="@dimen/padding_45"
                android:layout_marginLeft="@dimen/padding_2"
                android:layout_marginRight="@dimen/padding_20"
                android:layout_weight="1"

                android:background="@color/transparent"
                android:hint="请输入"
                android:text=""
                android:textColor="@color/color_e3e3e4"
                android:textColorHint="@color/black40"
                android:textSize="@dimen/padding_18" />
        </LinearLayout>
        <!--男方生日-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_45"
            android:layout_marginLeft="@dimen/padding_10"
            android:layout_marginTop="@dimen/padding_20"
            android:layout_marginRight="@dimen/padding_10"
            android:background="@drawable/shape_add_name"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/padding_20">

            <TextView
                style="@style/addNameTextStyle"
                android:text="男方生日:" />

            <View
                android:layout_width="@dimen/padding_1"
                android:layout_height="@dimen/padding_40"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/padding_10" />


            <TextView
                android:id="@+id/tv_input_four_boy_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/padding_10"
                android:layout_marginRight="@dimen/padding_10"
                android:text="请输入"
                android:textColor="@color/black40"
                android:textSize="@dimen/padding_18" />

        </LinearLayout>


        <!--女方姓名-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_10"
            android:layout_marginTop="@dimen/padding_20"
            android:layout_marginRight="@dimen/padding_10"
            android:background="@drawable/shape_add_name"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/padding_20">

            <TextView
                style="@style/addNameTextStyle"
                android:text="女方姓名:" />

            <View
                android:layout_width="@dimen/padding_1"
                android:layout_height="@dimen/padding_45"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/padding_10" />

            <com.company.forturetelling.utils.ClearEditText
                android:id="@+id/et_input_four_girl_name"
                android:layout_width="1dp"
                android:layout_height="@dimen/padding_45"
                android:layout_marginLeft="@dimen/padding_2"
                android:layout_marginRight="@dimen/padding_20"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:hint="请输入"
                android:text=""
                android:textColor="@color/color_e3e3e4"
                android:textColorHint="@color/black40"
                android:textSize="@dimen/padding_18" />
        </LinearLayout>
        <!--女方生日-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_45"
            android:layout_marginLeft="@dimen/padding_10"
            android:layout_marginTop="@dimen/padding_20"
            android:layout_marginRight="@dimen/padding_10"
            android:background="@drawable/shape_add_name"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/padding_20">

            <TextView
                style="@style/addNameTextStyle"
                android:text="女方生日:" />

            <View
                android:layout_width="@dimen/padding_1"
                android:layout_height="@dimen/padding_40"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/padding_10" />


            <TextView
                android:id="@+id/tv_input_four_girl_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/padding_10"
                android:layout_marginRight="@dimen/padding_10"
                android:text="请输入"
                android:textColor="@color/black40"
                android:textSize="@dimen/padding_18" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_input_four_submit"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/padding_10"
        android:layout_marginTop="@dimen/padding_20"
        android:layout_marginRight="@dimen/padding_10"
        android:background="@drawable/shape_six_input_submit"
        android:clickable="true"
        android:text="提交"
        android:textSize="@dimen/padding_20" />
</LinearLayout>