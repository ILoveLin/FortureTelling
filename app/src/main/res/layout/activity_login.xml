<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.activity.information.LoginActivity">


    <com.company.forturetelling.utils.ClearEditText

        android:id="@+id/et_login_phone"
        style="@style/EditTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_20"
        android:layout_marginTop="@dimen/padding_50"
        android:layout_marginRight="@dimen/padding_20"
        android:hint="请输入用户名"
        android:maxLength="11"
        android:text=""
        android:maxLines="1"
        android:textColor="@color/black40"
        android:textColorHint="@color/black60" />

    <View
        style="@style/LineStyleE5E5E5"
        android:layout_marginLeft="@dimen/padding_20"
        android:layout_marginRight="@dimen/padding_20" />

    <com.company.forturetelling.utils.ClearEditText
        android:id="@+id/et_login_password"
        style="@style/EditTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_20"
        android:layout_marginTop="@dimen/padding_10"
        android:layout_marginRight="@dimen/padding_20"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:maxLength="20"
        android:text=""
        android:maxLines="1"
        android:textColor="@color/black60"
        android:textColorHint="@color/black60" />

    <View
        style="@style/LineStyleE5E5E5"
        android:layout_marginLeft="@dimen/padding_20"
        android:layout_marginRight="@dimen/padding_20" />

    <TextView
        android:id="@+id/tv_login_forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="@dimen/padding_40"
        android:layout_marginTop="@dimen/padding_15"
        android:layout_marginRight="@dimen/padding_60"
        android:text="忘记密码"
        android:textColor="@color/colorAccent"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btn_login_commit"
        style="@style/ButtonStyle_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_40"
        android:layout_marginTop="@dimen/padding_30"
        android:layout_marginRight="@dimen/padding_40"
        android:text="登入" />

    <Button
        android:id="@+id/btn_login_wechat"
        style="@style/ButtonStyle_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_40"
        android:layout_marginTop="@dimen/padding_30"
        android:layout_marginRight="@dimen/padding_40"
        android:text="微信登录" />


    <TextView
        android:id="@+id/phone_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/padding_14"
        android:paddingTop="@dimen/padding_20"
        android:text="手机注册"
        android:textColor="@color/colorPrimary"

        />
    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="5" />


    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>