<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linear_all_new"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@drawable/selector_item_ffffff"
        android:paddingLeft="@dimen/padding_10"
        android:paddingTop="@dimen/padding_5"
        android:paddingRight="@dimen/padding_10"
        android:clickable="true"
        android:orientation="horizontal">

        <!--<com.company.forturetelling.view.RoundImageView-->
            <!--android:id="@+id/new_picc"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_marginRight="@dimen/padding_10"-->
            <!--android:clickable="false"-->
            <!--android:layout_gravity="center"-->
            <!--android:scaleType="fitXY"-->
            <!--android:src="@mipmap/item_new_iv" />-->
        <com.company.forturetelling.view.RoundImageView
            android:id="@+id/new_picc"
            android:layout_width="130dp"
            android:layout_height="@dimen/padding_85"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/padding_10"
            android:clickable="false"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@mipmap/item_new_iv" />
        <!--android:layout_width="130dp"-->
        <!--android:layout_height="@dimen/padding_85"-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/padding_10">


            <TextView
                android:id="@+id/new_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_5"
                android:ellipsize="end"
                android:lines="2"
                android:text="大家好~我是渣渣辉,是兄弟就不用多说,直接来砍我!!!!!"
                android:textColor="@color/black"
                android:textSize="@dimen/padding_18" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_0"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_5">

                <TextView
                    android:id="@+id/tv_item_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padding_1"
                    android:background="@drawable/shape_news"
                    android:paddingLeft="@dimen/padding_4"
                    android:paddingTop="@dimen/padding_1"
                    android:paddingRight="@dimen/padding_4"
                    android:paddingBottom="@dimen/padding_1"
                    android:text="相术"
                    android:textColor="@color/tab_main_pre"
                    android:textSize="@dimen/padding_12" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_0"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_item_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/padding_20"
                    android:text="2019-12-3"
                    android:textSize="@dimen/padding_14" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <View
        style="@style/LineStyleD9D9D9"
        android:layout_below="@+id/linear_all_new"
        android:paddingTop="@dimen/padding_8" />
</RelativeLayout>