<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/bg_fortune_part2"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/padding_20"
        android:text="今日运势"
        android:textColor="@color/color_3f3f3f"
        android:textSize="@dimen/padding_22" />

    <View
        style="@style/LineStyleD9D9D9"
        android:layout_marginLeft="@dimen/padding_20"
        android:layout_marginRight="@dimen/padding_20" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_20"
        android:layout_marginTop="@dimen/padding_20"
        android:orientation="horizontal">


        <RelativeLayout
            android:layout_width="@dimen/padding_80"
            android:layout_height="@dimen/padding_80"
            android:layout_gravity="center_vertical">

            <com.company.forturetelling.view.CircularProgressView
                android:id="@+id/circularprogressview"
                android:layout_width="@dimen/padding_80"
                android:layout_height="@dimen/padding_80"
                app:backColor="@color/color_caa778"
                app:backWidth="2dp"
                app:progColor="@color/color_caa778"
                app:progWidth="6dp"
                app:progress="65" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <TextView
                    android:id="@+id/tv02_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_10"
                    android:text="75"
                    android:textColor="@color/color_caa778"
                    android:textSize="@dimen/padding_28" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分"
                    android:textColor="@color/color_caa778"
                    android:textSize="@dimen/padding_16" />


            </LinearLayout>

        </RelativeLayout>
        <!--综合运势-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_10"
            android:orientation="vertical">

            <TextView
                style="@style/Fortune_Part02_4Text_Tips"
                android:layout_gravity="center_horizontal"
                android:text="综合运势" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv02_title01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_55"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/shape_page01_zonghe"
                    android:paddingLeft="@dimen/padding_6"
                    android:paddingRight="@dimen/padding_6"
                    android:text="一针见血 " />

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/padding_1"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv02_title02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="@dimen/padding_55"
                    android:background="@drawable/shape_page01_caifu"
                    android:paddingLeft="@dimen/padding_6"
                    android:paddingRight="@dimen/padding_6"
                    android:text="直觉惊人" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv02_title03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_55"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/shape_page01_aiqing"
                    android:paddingLeft="@dimen/padding_6"
                    android:paddingRight="@dimen/padding_6"
                    android:text="心灵洗礼 " />

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/padding_1"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv02_title04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="@dimen/padding_55"
                    android:background="@drawable/shape_page01_shiye"
                    android:paddingLeft="@dimen/padding_6"
                    android:paddingRight="@dimen/padding_6"
                    android:text="洞察力强" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_60">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_130"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv02_color"
                    style="@style/Fortune_Part02_Text_under_Tips"
                    android:text="黄色" />

                <TextView
                    style="@style/Fortune_Part02_Text_last_Tips"
                    android:text="吉祥颜色" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv02_num"
                    style="@style/Fortune_Part02_Text_under_Tips"
                    android:text="5" />

                <TextView
                    style="@style/Fortune_Part02_Text_last_Tips"
                    android:text="吉祥数字" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv02_orientation"
                    style="@style/Fortune_Part02_Text_under_Tips"
                    android:text="正南" />

                <TextView
                    style="@style/Fortune_Part02_Text_last_Tips"
                    android:text="幸运财位" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv022_food"
                    style="@style/Fortune_Part02_Text_under_Tips"
                    android:text="玉米,糯米" />

                <TextView
                    android:id="@+id/tv02_food"
                    style="@style/Fortune_Part02_Text_last_Tips"
                    android:text="开运食物" />


            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>
    <!--运势详情-->

    <View

        android:id="@+id/view_line"
        style="@style/LineStyleD9D9D9"
        android:layout_marginLeft="@dimen/padding_20"
        android:layout_marginRight="@dimen/padding_20" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_fortune_part"
        android:layout_marginLeft="@dimen/padding_20"
        android:layout_marginTop="@dimen/padding_10"
        android:layout_marginBottom="@dimen/padding_10"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_part1_logo"
            android:layout_width="23dp"
            android:layout_height="@dimen/padding_17"
            android:background="@drawable/icon_fortune_tip" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_10"
            android:layout_toRightOf="@+id/tv_part1_logo"
            android:text="运势详情"
            android:textColor="@color/color_b883df"
            android:textSize="@dimen/padding_20" />
    </LinearLayout>

</LinearLayout>